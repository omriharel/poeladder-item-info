{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/omriharel/poeladder-community-item-info/schemas/single-item.schema.json",
    "title": "Single item",
    "description": "Defines known and community-recommended acquisition methods for a Unique item in an SSF environment",
    "if": {
        "type": "object",
        "properties": {
            "acquisitionMethods": {
                "type": "array"
            }
        },
        "required": [
            "acquisitionMethods"
        ]
    },
    "then": {
        "$ref": "#/$defs/acquisitionMethods"
    },
    "else": {
        "title": "Variant map",
        "description": "An object mapping different variants of an item to each of their acquisition methods",
        "type": "object",
        "properties": {
            "variants": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                    "$ref": "#/$defs/acquisitionMethods"
                }
            }
        },
        "required": [
            "variants"
        ]
    },
    "$defs": {
        "acquisitionMethods": {
            "type": "object",
            "title": "Acquisition methods",
            "description": "Defines at least one possible acquisition method for an item",
            "properties": {
                "acquisitionMethods": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/acquisitionMethod"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "acquisitionMethods"
            ]
        },
        "acquisitionMethod": {
            "title": "Acquisition method",
            "description": "A possible way of acquiring a Unique item",
            "type": "object",
            "unevaluatedProperties": false,
            "properties": {
                "type": {
                    "$comment": "Indicates which other fields exist on the object",
                    "enum": [
                        "typicalDivCardFarm",
                        "boss",
                        "vendorRecipe",
                        "plainText"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "typicalDivCardFarm"
                            }
                        },
                        "required": [
                            "type"
                        ]
                    },
                    "then": {
                        "title": "Typical Divination Card farm",
                        "description": "Details a commonly-employed divination card farming strategy targeted at finding a Unique item",
                        "properties": {
                            "investment": {
                                "enum": [
                                    "low",
                                    "medium",
                                    "high"
                                ]
                            },
                            "card": {
                                "type": "string",
                                "minLength": 1
                            },
                            "dropLocations": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "wiki": {
                                "$ref": "#/$defs/wikiLink"
                            }
                        },
                        "required": [
                            "investment",
                            "card",
                            "dropLocations"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "boss"
                            }
                        },
                        "required": [
                            "type"
                        ]
                    },
                    "then": {
                        "title": "Boss drop",
                        "description": "Details a boss drop source for a Unique item",
                        "properties": {
                            "boss": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uber": {
                                "type": "boolean",
                                "default": false
                            },
                            "variantName": {
                                "type": "string",
                                "minLength": 1
                            },
                            "frequency": {
                                "enum": [
                                    "common",
                                    "uncommon",
                                    "rare",
                                    "extremely-rare"
                                ]
                            },
                            "wiki": {
                                "$ref": "#/$defs/wikiLink"
                            }
                        },
                        "required": [
                            "boss",
                            "frequency"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "vendorRecipe"
                            }
                        },
                        "required": [
                            "type"
                        ]
                    },
                    "then": {
                        "title": "Vendor recipe",
                        "description": "Details a vendor recipe for obtaining a Unique item",
                        "properties": {
                            "components": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "wiki": {
                                "$ref": "#/$defs/wikiLink"
                            }
                        },
                        "required": [
                            "components"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "plainText"
                            }
                        },
                        "required": [
                            "type"
                        ]
                    },
                    "then": {
                        "title": "Plain text (special exception)",
                        "description": "Free-form explanatory text (reserved for special cases that warrant an unstructured text explanation)",
                        "properties": {
                            "text": {
                                "type": "string",
                                "minLength": 1
                            },
                            "referenceLink": {
                                "anyOf": [
                                    {
                                        "$ref": "#/$defs/wikiLink"
                                    },
                                    {
                                        "$ref": "#/$defs/poeFishLink"
                                    }
                                ]
                            }
                        },
                        "required": [
                            "text",
                            "referenceLink"
                        ]
                    }
                }
            ]
        },
        "wikiLink": {
            "type": "string",
            "pattern": "^https://(www\\.)?poewiki\\.net/wiki/\\w[A-Z,a-z'_\\-()%0-9]+(#\\w[A-Z,a-z'_\\-()%0-9]+)?$"
        },
        "poeFishLink": {
            "type": "string",
            "pattern": "^https://poe\\.fish/\\w[/A-Za-z\\-]+(#\\w[A-Za-z\\-]+)?$"
        }
    }
}
